extends layout 
block content 

    h1(class='display-6')=title 
    
    form(method='POST')
        div.form-group 
            label.form-label.lead.mt-3(for='categoryName') Name: 
            input.form-control#categoryName(type='text' placeholder='Books' name='categoryName' value=(undefined===category?'':category.name) required) 
            div.form-text This will be used to create a new category in records. 
            
            div.d-flex.justify-content-center
                button.btn.btn-primary.mt-3.lead(type='submit') Submit
    if errors
        ul.list-unstyled
            for error in errors
                li.text-danger !{error.msg} 
